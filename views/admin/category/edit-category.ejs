<%- include('../templates/header.ejs') -%>
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <h1>Edit Category</h1>
            </div>
        </div>
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-12">
            <%
              if(locals.message){
                %>
                <p class="alert alert-danger"><%= message %></p>
                <%
              }
            %>
            <form action="/admin/update_category/<%= category.id %>" method="post">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" value="<%= category.name %>" placeholder="Enter Name" id="name" class="form-control form-control-sm">
              </div>
              <div class="form-group">
                <a href="/admin/category" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a>
                <a href="#"><button class="btn btn-sm btn-success"><i class="fa fa-check"></i></button></a>
              </div>
            </form>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

<%- include('../templates/footer.ejs') -%>